<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SplittableDataGridSAmple">

    <Style TargetType="local2:Contacts2Tab" xmlns:local2="using:SplittableDataGridSAmple.Tabs">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local2:Contacts2Tab">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local2:DrawingBuilderTab" xmlns:local2="using:SplittableDataGridSAmple.Tabs">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local2:DrawingBuilderTab">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
